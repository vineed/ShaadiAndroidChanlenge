<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llProgress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/progress_overlay"
    android:clickable="true"
    android:descendantFocusability="blocksDescendants"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/progress_spinner_sz"
        android:layout_height="@dimen/progress_spinner_sz"
        android:indeterminate="false" />

    <TextView
        android:id="@+id/tvProgressMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/progress_title_marg_tp"
        android:textColor="@color/progress_title"
        android:textSize="@dimen/progress_title"
        tools:text="Loading..." />
</LinearLayout>